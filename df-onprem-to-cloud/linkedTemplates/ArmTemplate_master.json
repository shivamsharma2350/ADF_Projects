{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "df-onprem-to-cloud"
		},
		"ls_ADLS_Gen2_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'ls_ADLS_Gen2'"
		},
		"ls_cloud_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'ls_cloud'"
		},
		"ls_onprem_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'ls_onprem'"
		},
		"ls_ADLS_Gen2_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://san1storage2025.dfs.core.windows.net/"
		},
		"ls_cloud_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "sn-2cloud.database.windows.net"
		},
		"ls_cloud_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "cloud_db"
		},
		"ls_cloud_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "dev123"
		},
		"ls_onprem_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "DESKTOP-G3K4MOQ"
		},
		"ls_onprem_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "onprem"
		},
		"ls_onprem_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "adf_onprem"
		},
		"tr_tumbling_window_properties_pipeline_parameters_WindowStart": {
			"type": "string",
			"defaultValue": "@trigger().outputs.windowStartTime"
		},
		"tr_tumbling_window_properties_pipeline_parameters_WindowEnd": {
			"type": "string",
			"defaultValue": "@trigger().outputs.windowEndTime"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "df-onprem-to-cloud_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"ls_ADLS_Gen2_accountKey": {
						"value": "[parameters('ls_ADLS_Gen2_accountKey')]"
					},
					"ls_cloud_password": {
						"value": "[parameters('ls_cloud_password')]"
					},
					"ls_onprem_password": {
						"value": "[parameters('ls_onprem_password')]"
					},
					"ls_ADLS_Gen2_properties_typeProperties_url": {
						"value": "[parameters('ls_ADLS_Gen2_properties_typeProperties_url')]"
					},
					"ls_cloud_properties_typeProperties_server": {
						"value": "[parameters('ls_cloud_properties_typeProperties_server')]"
					},
					"ls_cloud_properties_typeProperties_database": {
						"value": "[parameters('ls_cloud_properties_typeProperties_database')]"
					},
					"ls_cloud_properties_typeProperties_userName": {
						"value": "[parameters('ls_cloud_properties_typeProperties_userName')]"
					},
					"ls_onprem_properties_typeProperties_server": {
						"value": "[parameters('ls_onprem_properties_typeProperties_server')]"
					},
					"ls_onprem_properties_typeProperties_database": {
						"value": "[parameters('ls_onprem_properties_typeProperties_database')]"
					},
					"ls_onprem_properties_typeProperties_userName": {
						"value": "[parameters('ls_onprem_properties_typeProperties_userName')]"
					},
					"tr_tumbling_window_properties_pipeline_parameters_WindowStart": {
						"value": "[parameters('tr_tumbling_window_properties_pipeline_parameters_WindowStart')]"
					},
					"tr_tumbling_window_properties_pipeline_parameters_WindowEnd": {
						"value": "[parameters('tr_tumbling_window_properties_pipeline_parameters_WindowEnd')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}